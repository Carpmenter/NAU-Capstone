@model NAUReviewApplication.Models.Category

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2>Delete Group</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    Group Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="CategoryId" />
                <a asp-action="Index" class="btn btn-default">
                    <span class="glyphicon glyphicon-menu-left">&nbsp;Back</span>
                </a>
                <input type="submit" value="Delete" class="btn btn-danger" style="float: right;" />
            </form>
        </div>
    </div>
</body>
</html>
