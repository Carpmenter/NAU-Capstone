@model IEnumerable<NAUReviewApplication.Models.Category>

@{
    ViewBag.Tutle = "Category";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Categories</h2>
    <p>
        <a asp-action="Create" class="btn btn-default">
            <span class="glyphicon glyphicon-plus-sign">&nbsp;New</span>
        </a>
    </p>
    <br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Category Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-default">
                            <span class="glyphicon glyphicon-pencil">&nbsp;Edit</span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-default">
                            <span class="glyphicon glyphicon-list-alt">&nbsp;View</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-default">
                            <span class="glyphicon glyphicon-remove">&nbsp;Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
