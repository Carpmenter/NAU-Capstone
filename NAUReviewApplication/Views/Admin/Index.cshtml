@model IEnumerable<NAUReviewApplication.Models.Survey>

@{
    ViewData["Title"] = "Index";
}

<h2>Completed Surveys</h2>

<table class="table">
    <thead>
        <tr>
            <th>Survey ID</th>
            <th>
                Survey Name
            </th>
            <th>
                Survey Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SurveyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.CreationDate.ToString("MM/dd/yyyy")
                </td>
                <td>
                    <a aps-controller="Admin" asp-action="emailPage" asp-route-id="@item.SurveyId">Send Survey</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<table style="width:100%;">
    <tr>
        <td align="center">
            <form method="POST">
                <input type="submit" value="Create a New Survey"
                       asp-area="" asp-controller="Admin" asp-action="SaveSurveyPage" />
            </form>
        </td>
    </tr>
</table>